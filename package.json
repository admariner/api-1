{
    "name": "@datawrapper/api",
    "version": "1.3.8",
    "description": "This repository contains the new Node.js based API that will power the future of Datawrapper.",
    "homepage": "https://github.com/datawrapper/datawrapper-api#readme",
    "bugs": {
        "url": "https://github.com/datawrapper/datawrapper-api/issues"
    },
    "license": "MIT",
    "author": "Datawrapper GmbH",
    "files": [
        "src",
        "scripts",
        "config.tpl.js"
    ],
    "main": "src/index.js",
    "bin": {
        "datawrapper-api": "scripts/start.js",
        "datawrapper-orm-sync": "scripts/sync-db.js"
    },
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "nodemon src/index.js",
        "postinstall": "node scripts/install.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/datawrapper-api.git"
    },
    "dependencies": {
        "@datawrapper/orm": "^3.0.2",
        "body-parser": "^1.18.3",
        "chalk": "^2.4.2",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.5",
        "d3-dsv": "^1.0.10",
        "express": "^4.16.4",
        "lodash.shuffle": "^4.2.0",
        "mysql2": "^1.6.4",
        "sequelize": "^4.42.0",
        "underscore": "^1.9.1",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.4",
        "nodemon": "^1.18.7",
        "prettier": "^1.16.4"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
