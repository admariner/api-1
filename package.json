{
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ]
    },
    "scripts": {
        "format": "prettier '**/*.js' --write",
        "lint": "prettier --check '**/*.{js,html}' && healthier '**/*.{js,html}'",
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "DEV=true nodemon src/index.js",
        "postinstall": "node scripts/postinstall.js",
        "start": "dw-api"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    },
    "name": "@datawrapper/api",
    "version": "2.0.0-alpha.2",
    "author": "Datawrapper GmbH",
    "description": "This repository contains the new Node.js based API that will power the future of Datawrapper.",
    "main": "src/index.js",
    "bin": {
        "dw-api": "src/index.js",
        "dw-sync": "scripts/sync-db.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/datawrapper-api.git"
    },
    "license": "MIT",
    "files": [
        "src",
        "config.tpl.js"
    ],
    "dependencies": {
        "@datawrapper/orm": "2.0.0",
        "bcrypt": "3.0.4",
        "boom": "7.3.0",
        "globby": "9.0.0",
        "hapi": "18.1.0",
        "hapi-auth-bearer-token": "6.1.1",
        "hapi-auth-cookie": "9.1.0",
        "hapi-pino": "5.4.1",
        "hapi-swagger": "9.3.1",
        "humps": "2.0.1",
        "joi": "14.3.1",
        "nanoid": "2.0.1",
        "sequelize": "4.42.0"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.4",
        "nodemon": "^1.18.7",
        "prettier": "^1.16.4"
    }
}
